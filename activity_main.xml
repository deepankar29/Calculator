<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt8"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_above="@+id/bt4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="121dp"
        android:text="8" />

    <Button
        android:id="@+id/bt9"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/bt8"
        android:layout_marginEnd="111dp"
        android:text="9" />

    <Button
        android:id="@+id/bt4"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_above="@+id/bt2"
        android:layout_alignStart="@+id/bt7"
        android:text="4" />

    <Button
        android:id="@+id/bt5"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/bt8"
        android:layout_alignLeft="@+id/bt8"
        android:layout_alignTop="@+id/bt4"
        android:text="5" />

    <Button
        android:id="@+id/bt6"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/bt9"
        android:layout_alignLeft="@+id/bt8"
        android:layout_alignTop="@+id/bt5"
        android:text="6" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/bt7"
        android:layout_alignTop="@+id/bt2"
        android:text="1" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/bt8"
        android:layout_alignTop="@+id/bt3"
        android:text="2" />

    <Button
        android:id="@+id/clr"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/bt4"
        android:layout_alignTop="@+id/equal"
        android:text="CLR" />

    <Button
        android:id="@+id/equal"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/bt6"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/bt6"
        android:layout_marginBottom="14dp"
        android:text="=" />

    <Button
        android:id="@+id/bt0"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/bt8"
        android:layout_alignTop="@+id/clr"
        android:text="0" />

    <Button
        android:id="@+id/bt3"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/adds"
        android:layout_alignStart="@+id/bt6"
        android:text="3" />

    <Button
        android:id="@+id/bt7"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_above="@+id/bt6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:text="7" />

    <Button
        android:id="@+id/multi"
        android:layout_width="78dp"
        android:layout_height="68dp"
        android:layout_alignStart="@+id/div"
        android:layout_below="@+id/bt8"
        android:text="*" />

    <Button
        android:id="@+id/sub"
        android:layout_width="78dp"
        android:layout_height="68dp"
        android:layout_alignStart="@+id/multi"
        android:layout_alignTop="@+id/clr"
        android:text="-" />

    <Button
        android:id="@+id/adds"
        android:layout_width="78dp"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/multi"
        android:layout_marginBottom="92dp"
        android:text="+" />

    <Button
        android:id="@+id/div"
        android:layout_width="78dp"
        android:layout_height="68dp"
        android:layout_alignEnd="@+id/tvdisplay"
        android:layout_alignTop="@+id/bt8"
        android:text="/" />

    <TextView
        android:id="@+id/tvdisplay"
        android:layout_width="376dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="163dp"
        android:fontFamily="monospace"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvcontrol"
        android:layout_width="205dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/bt4"
        android:layout_marginTop="70dp"
        android:fontFamily="monospace"
        android:textSize="30sp" />
</RelativeLayout>